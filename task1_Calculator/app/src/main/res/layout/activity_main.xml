<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_above="@id/result_tv"
        android:layout_margin="16dp"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:id="@+id/result_tv"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_above="@id/buttons_layout"
        android:layout_margin="16dp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        
        
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="AC"
            android:textSize="21dp"
            android:backgroundTint="#ff0100"
            android:textColor="@color/white"
            android:id="@+id/button_c"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="("
            android:textSize="32dp"
            android:textColor="@color/white"
            android:id="@+id/button_openBrac"
            android:backgroundTint="#8360aa"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text=")"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:backgroundTint="#8360aa"
            android:id="@+id/button_closeBrac"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="/"
            android:textSize="32dp"
            android:backgroundTint="#8360aa"
            android:textColor="@color/white"
            android:id="@+id/button_divide"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="7"
            android:textSize="32dp"
            android:backgroundTint="#00c5cd"
            android:textColor="@color/white"
            android:id="@+id/button_seven"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="8"
            android:textSize="32dp"
            android:backgroundTint="#00c5cd"
            android:textColor="@color/white"
            android:id="@+id/button_eight"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="9"
            android:textSize="32dp"
            android:backgroundTint="#00c5cd"
            android:textColor="@color/white"
            android:id="@+id/button_nine"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            android:backgroundTint="#00ff80"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="*"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:id="@+id/button_multiply"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="4"
            android:textSize="32dp"
            android:backgroundTint="#00c5cd"
            android:textColor="@color/white"
            android:id="@+id/button_four"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="5"
            android:textSize="32dp"
            android:backgroundTint="#00c5cd"
            android:textColor="@color/white"
            android:id="@+id/button_five"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="6"
            android:textSize="32dp"
            android:backgroundTint="#00c5cd"
            android:textColor="@color/white"
            android:id="@+id/button_six"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="100dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="-"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:backgroundTint="#00ff80"
            android:id="@+id/button_minus"
            android:layout_margin="13dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_one"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="#00c5cd"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="100dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_two"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="#00c5cd"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="100dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_three"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="#00c5cd"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="100dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="#00ff80"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="100dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_zero"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="#00c5cd"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="100dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_duo"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="#00c5cd"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="23dp"
                app:cornerRadius="100dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="#00c5cd"
                android:text="."
                android:textColor="@color/white"
                android:textSize="45dp"
                app:cornerRadius="100dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equal"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="100dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>